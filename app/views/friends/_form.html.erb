<%= form_with(model: friend) do |form| %>
  <% if friend.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% friend.errors.full_messages.each do |message| %>
            <li><%= message %></li> 
        <% end %>
      </ul>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    </div>
  <% end %>
  <div class="field form-group mt-1">
    <br/>
    <%= form.text_field :first_name , class:"form-control" , placeholder:"First Name" %>
  </div>

  <div class="field form-group mt-1">
    <%= form.text_field :last_name , class:"form-control" ,placeholder:"Last Name"%>
  </div>

  <div class="field form-group mt-1">
    <%= form.text_field :email , class:"form-control" ,placeholder:"Email"%>
  </div>

  <div class="field form-group mt-1">
    <%= form.text_field :phone , class:"form-control" ,placeholder:"Phone Number"%>
  </div>

  <div class="field form-group mt-1">
    <%= form.text_field :twitter , class:"form-control" ,placeholder:"Twitter"%>
  </div>

  <div class="field form-group mt-1">
    <%= form.text_field :user_id , id: :friend_user_id, class:"form-control" ,placeholder:"User Id", value: current_user.id, type: :hidden%>
  </div>

  <div class="actions mt-2">
    <%= form.submit class:"btn btn-secondary"%>
  </div>
<% end %>
