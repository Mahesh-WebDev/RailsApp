
<% content_for :title, "Friends" %>

<h1 class="text-center text-success">Friend List</h1>


<table id="friends" class="table table-striped table-hover align-middle table-bordered">
  <thead class="table-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone Number</th>
      <th scope="col">Twitter</th>
      <th scope="col">User Id</th>
      <th> </th>
    </tr>
  </thead>
  <% @friends.each do |friend| %>
  <tbody>
    <% if current_user == friend.user%>
    <tr>
      <th scope="row"> <%= link_to "#{friend.first_name} #{friend.last_name}", friend%> </th>
      <td><%= friend.email %></td>
      <td><%= friend.phone %></td>
      <td><%=  friend.twitter %></td>
      <td><%=  friend.user_id %></td>
      <td> <%= link_to "Delete", friend, method: :delete ,data: { turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class:"btn btn-outline-danger btn-sm"%> </td>
    </tr>
    <% end %>
  </tbody>
  <% end %>
</table>


